    "@types/apicache": "^1.2.0",
    "@types/redis": "^2.8.6",
    "@types/shelljs": "^0.8.0",
    "apicache": "^1.2.3",
    "fastify-formbody": "^2.0.0",
    "jest-cucumber": "^1.0.7",
    "mssql": "^4.2.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "request-promise": "^4.2.2",
    "rxjs": "^6.3.3",
    "shelljs": "^0.8.2",
    "typeorm": "^0.2.7",
    "typescript": "^2.6.2",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1"
